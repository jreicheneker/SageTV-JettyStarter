<?xml version="1.0"  encoding="ISO-8859-1"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "http://www.eclipse.org/jetty/configure_9_0.dtd">
<Configure class="org.eclipse.jetty.webapp.WebAppContext">
  <Set name="contextPath">/</Set>

  <Set name="displayName">SageTV Web Applications</Set>
  <Call name="setAttribute">
     <Arg>pluginid</Arg>
     <Arg>jetty</Arg>
  </Call>
  <Call name="setAttribute">
     <Arg>webpage</Arg>
     <Arg></Arg>
  </Call>

  <!--Set name="resourceBase"><SystemProperty name="jetty.base" default="."/>/webapps/root</Set-->
  <Set name="war">
    <SystemProperty name="jetty.base" default="."/>/webapps/root.war
  </Set>
  <!-- 
  <Set name="tempDirectory">
    <SystemProperty name="jetty.base" default="."/>/webapps/rootTemp
  </Set>
  -->
  <Set name="defaultsDescriptor">
    <SystemProperty name="jetty.base" default="."/>/etc/webdefault.xml
  </Set>
  <Set name="extractWAR">true</Set>
  <Set name="copyWebDir">true</Set>

  <Set name="mimeTypes">
    <New id="mimeTypes" class="sagex.jetty.content.MimeTypes"/>
  </Set>
  
</Configure>
